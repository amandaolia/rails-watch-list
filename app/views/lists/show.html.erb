<div class="cinema">
  <%= image_tag(@list.image)%>
</div>
<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @list.name %></h1>
    <div>
      <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
      <%= link_to "Back to my movie lists", lists_path, class: "btn btn-secondary btn-light" %>
    </div>
  </div>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
           <div class="card-body" style="border: solid #ffffff">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><small class="text-muted">‚≠ê <%= bookmark.movie.rating %></small></p>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><em>"<%= bookmark.comment %>"</em></p>
            <%= link_to "Delete", bookmark_path(bookmark),
                data: { turbo_method: :delete, turbo_confirm: "Do you want to remove #{bookmark.movie.title} from this list?" },
                class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
